<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body id="store">
  <div id="banner">
    <%= image_tag("rails.png",:size => "40x40") %>
    <%= @page_title || "Pragmetic bookshelf" %>
  </div>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id=> "cart") do %>
          <%= render @cart %>
        <% end %>
      <% end %>

      <a href="http://<%= ROOT_URL %>/">Home</a><br />
      <a href="http://<%= ROOT_URL %>/faq">Questions</a><br />
      <a href="http://<%= ROOT_URL %>/news">News</a><br />
      <a href="http://<%= ROOT_URL %>/contact">Contact</a><br />
      <div id="time">
        <%= Time.now %>
      </div>
     <% if session[:user_id] %>
       <br />
       <%= link_to 'Orders', orders_path %><br />
       <%= link_to 'Products', products_path %><br />
       <%= link_to 'Users', users_path %><br />
       <br />
       <%= button_to 'Logout', logout_path, :method => :delete %>
     <% end %>
    </div>
    <div id="main">
      <%= yield %>
    </div>
  </div>
</body>
</html>
